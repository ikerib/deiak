{% extends 'base.html.twig' %}

{% block body_class %} skin-blue {% endblock %}

{% block sidebar %}

    <section class="sidebar">
        <div class="user-panel">
            <div class="pull-left image">
                <img src="{{ asset('bundles/app/img/avatar04.png') }}" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>{{ ocs.NAME }}</p>
                <p>{{ ocs.IPADDR }}</p>
            </div>
        </div>

        <ul class="sidebar-menu">
            <li class="header">Informazioa</li>
            <li>{{ ocs.OSNAME}}</li>
            {% if ocs.OSCOMMENTS is defined %}
                <li>{{ ocs.OSCOMMENTS}}</li>
            {% endif %}
        </ul>

        {% block main_menu_wrapper %}
            {{ include([
            _entity_config is defined ? _entity_config.templates.menu,
            easyadmin_config('design.templates.menu'),
            '@EasyAdmin/default/menu.html.twig'
            ]) }}
        {% endblock main_menu_wrapper %}
    </section>

{% endblock %}

{% block main %}
    <h1>Inzidentzia creation</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('inzidentzia_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
